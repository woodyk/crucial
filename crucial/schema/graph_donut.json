{
  "name": "graph_donut",
  "description": "Draw a Crucial-styled donut chart (variant of pie).",
  "parameters": {
    "type": "object",
    "properties": {
      "canvas_id": {
        "type": "string"
      },
      "data": {
        "type": "array",
        "description": "List of {label, value} segments",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string"
            },
            "value": {
              "type": "number"
            }
          },
          "required": [
            "label",
            "value"
          ]
        }
      },
      "color": {
        "type": "string",
        "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$"
      },
      "theme": {
        "type": "string",
        "enum": [
          "light",
          "dark"
        ],
        "default": "dark"
      },
      "title": {
        "type": "string"
      },
      "transparent": {
        "type": "boolean",
        "default": false
      }
    },
    "required": [
      "canvas_id",
      "data",
      "color"
    ]
  }
}