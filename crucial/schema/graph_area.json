{
  "name": "graph_area",
  "description": "Render an area graph beneath a connected line using Crucial style.",
  "parameters": {
    "type": "object",
    "properties": {
      "canvas_id": {
        "type": "string",
        "description": "Canvas to render to"
      },
      "x_values": {
        "type": "array",
        "items": { "type": "number" },
        "description": "List of x values for the area graph"
      },
      "y_values": {
        "type": "array",
        "items": { "type": "number" },
        "description": "List of y values for the area graph"
      },
      "color": {
        "type": "string",
        "pattern": "^#(?:[0-9a-fA-F]{3}){1,2}$",
        "description": "Hex color code for the line and fill (e.g., '#ff00cc')"
      },
      "title": {
        "type": "string",
        "description": "Optional chart title"
      },
      "theme": {
        "type": "string",
        "enum": ["light", "dark"],
        "default": "dark",
        "description": "Visual theme style"
      },
      "transparent": {
        "type": "boolean",
        "default": false,
        "description": "Render on transparent background"
      },
      "x_label": {
        "type": "string",
        "description": "Label for x-axis"
      },
      "y_label": {
        "type": "string",
        "description": "Label for y-axis"
      }
    },
    "required": [
      "canvas_id",
      "x_values",
      "y_values",
      "color"
    ]
  }
}

