# Crucial Server Configuration
CRUCIAL_HOST=0.0.0.0
CRUCIAL_PORT=8000
CRUCIAL_SSL=false
CRUCIAL_SSL_CERT=cert.pem
CRUCIAL_SSL_KEY=key.pem
CRUCIAL_LOG_LEVEL=info

# Canvas Defaults
CANVAS_WIDTH=800
CANVAS_HEIGHT=600
CANVAS_BACKGROUND=#000000
CANVAS_VALIDATE=true

# Frontend Rendering
FRONTEND_ENABLE_WS=true
FRONTEND_REPLAY_DELAY=30
FRONTEND_THEME=dark

# API Authentication
AUTH_REQUIRE_API_KEY=true
AUTH_KEYS_FILE=keys.json

# Tooling Behavior
TOOLS_API_URL=http://localhost:8000/canvas
TOOLS_TIMEOUT=10
TOOLS_RETRIES=3

# Database
CRUCIAL_DB_PATH=crucial.db

# Logging
CRUCIAL_LOG_TO_FILE=true
CRUCIAL_LOG_DEBUG=true
CRUCIAL_LOG_PATH=logs/crucial.log
