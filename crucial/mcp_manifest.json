    "tools_endpoint": "http://localhost:8000/canvas",
    "schema_url_template": "http://localhost:8000/schema/{tool_name}.json",
    "object_url_template": "http://localhost:8000/object/{id}",
    "tags": [
        "drawing",
        "rendering",
        "canvas",
